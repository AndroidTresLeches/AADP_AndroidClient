<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="${relativePackage}.${activityClass}" >


    	<LinearLayout
    	    android:id="@+id/llStoryDetail"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:background="@color/address_blue" >
	    
		<com.tresleches.aadp.circularImageView.CircularImageView
		        android:id="@+id/ivStoryDetailPic"
		        android:layout_width="match_parent"
		        android:layout_height="150dp"
		        android:layout_gravity="center"
		        android:layout_marginLeft="65dp"
		        />
		</LinearLayout>  
	    <ImageView
	        android:id="@+id/ivFacebook"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/ivTwitter"
	        android:layout_toLeftOf="@+id/ivTwitter"
	        android:paddingBottom="5dp"
	        android:layout_marginRight="32dp"
	        android:src="@drawable/ic_facebook" />
	    
	    <ImageView
	        android:id="@+id/ivTwitter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:layout_below="@+id/llStoryDetail"
	        android:paddingBottom="5dp"
	        android:layout_marginTop="10dp"
		        android:src="@drawable/ic_twitter" />
	    <ImageView
	        android:id="@+id/ivShare"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ivFacebook"
	        android:layout_marginLeft="32dp"
	        android:paddingBottom="5dp"
	        android:layout_toRightOf="@+id/ivTwitter"
	        android:src="@drawable/ic_action_share" />    

	<TextView
        android:id="@+id/tvStoryDetailDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="@color/address_blue" />



</RelativeLayout>
