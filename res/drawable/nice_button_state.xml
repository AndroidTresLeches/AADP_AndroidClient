<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true"
        android:state_enabled="true"
        >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
    	<gradient 
        android:startColor="@color/gradientStart_white"
        android:endColor="@color/gradientEnd_white"
        android:angle="90"
        />
    <corners android:radius="10dp"/>
    <stroke android:width="1dp" android:color="#FF00AA"/>

</shape>
        
    </item>
    
    <item android:state_pressed="false">
        
			<shape xmlns:android="http://schemas.android.com/apk/res/android" >
			    <gradient 
			        android:startColor="@color/gradientEnd_white"
			        android:endColor="@color/gradientStart_white"
			        android:angle="-90"
			        />
			    <corners android:radius="10dp"/>
			    <stroke android:width="1dp" android:color="#FF00AA"/>
			</shape>        
    </item>

</selector>
